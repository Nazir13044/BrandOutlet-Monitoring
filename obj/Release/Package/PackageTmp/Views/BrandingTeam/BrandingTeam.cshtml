<script>


    $(document).ready(function () {

        loadData();

    });
    $("#btnReset").click(function () {
        Clear();
    });

    $('#txtEmployeeName').focus();

    $("#btnSave").click(function () {

        debugger;

        if ($("#txtEmployeeName").val() == "") {
            iziToast.warning({
                timeout: 1000,
                imageWidth: 150,
                position: 'center',
                title: 'Warning',
                message: 'Employee Name Required'
            });
            return false;

        } else if ($("#txtEmployeeId").val() == "") {
            iziToast.warning({
                timeout: 1000,
                imageWidth: 150,
                position: 'center',
                title: 'Warning',
                message: 'Employee Id Required'
            });
            return false;
        } else if ($("#txtMobileNumber").val() == "") {
            iziToast.warning({
                timeout: 1000,
                imageWidth: 150,
                position: 'center',
                title: 'Warning',
                message: 'Mobile Number Required'
            });
            return false;
        }
        else if ($("#txtEmail").val() == "") {
            iziToast.warning({
                timeout: 1000,
                imageWidth: 150,
                position: 'center',
                title: 'Warning',
                message: 'Email Required'
            });
            return false;
        }


        else {
            var brandingTeam = {};

            brandingTeam.Name = $("#txtEmployeeName").val().trim();
            brandingTeam.EmployeeId = $("#txtEmployeeId").val().trim();
            brandingTeam.MobileNumber = $("#txtMobileNumber").val().trim();
            brandingTeam.Email = $("#txtEmail").val().trim();



            console.log(brandingTeam);

            //alert("Data Saved");
        }
        debugger;
        $.ajax({
            url: '@Url.Action("InsertBrandingTeamInfo", "BrandingTeam")',
            type: 'POST',
            data: JSON.stringify({ brandingTeam: brandingTeam }),
            dataType: 'json',
            async: false,
            contentType: 'application/json',
            success: function (data) {


                if (data.IsSuccess) {
                    iziToast.success({
                        timeout: 2000,
                        imageWidth: 150,
                        position: 'center',
                        title: 'Success',
                        message: 'Information Saved Successfully'
                    });

                    Clear();
                    loadData();
                    return true;
                }
                else {
                    iziToast.error({
                        timeout: 2000,
                        imageWidth: 150,
                        position: 'center',
                        title: 'Error',
                        message: data.Message
                    });

                    Clear();
                    return false;
                }


            },
            error: function (result) {
                iziToast.error({
                    timeout: 2000,
                    imageWidth: 150,
                    position: 'center',
                    title: 'Error',
                    message: result
                });

                return false;
            }

        });
    });

    //$("#btnSave").click(function () {
    //    loadData();

    //});

    function loadData() {
        debugger;


        var table = $('#tblBrandingTeamDatatable').DataTable({
            "ajax": {
                "url": "@Url.Action("GetBrandingTeamListDatatable", "BrandingTeam")",
                "type": "GET",
                "datatype": "json"
            },
            "destroy": true,
            "columnDefs":
            [{
                "targets": [0],
                "searchable": true,
                "visible": false
            },
                { "width": "10%", "targets": 1 }
            ],
            "pageLength": 5,
            "scrollY": "200px",
            "dom": 'Bfrtip',

            "columns": [
                { "data": "Id", "autoWidth": true, "searchable": true },
                { "data": "Name", "autoWidth": true, "searchable": true },
                { "data": "EmployeeId", "autoWidth": true, "searchable": true },
                { "data": "MobileNumber", "autoWidth": true, "searchable": true },
                { "data": "Email", "autoWidth": true, "searchable": true },

                { "data": null, "defaultContent": "<button id='Edit'>Edit</button>" },
                { "data": null, "defaultContent": "<button id='Delete'>Delete</button>" }

            ]
        });


        table.buttons().container()
            .appendTo('#datatable_wrapper .small-4.columns:eq(0)');

    }

     $('#tblBrandingTeamDatatable tbody').on('click', '#Edit', function () {

         debugger;
        var currentRow = $(this).closest("tr");

        var data = $('#tblBrandingTeamDatatable').DataTable().row(currentRow).data();
       
        var brandingId = data['Id'];
        
        EditBrandingTeam(brandingId);

    });

     $('#tblBrandingTeamDatatable tbody').on('click', '#Delete', function () {
        var currentRow = $(this).closest("tr");
        var data = $('#tblBrandingTeamDatatable').DataTable().row(currentRow).data();

        var brandingId = data['Id'];
        debugger;
        var brandingInfo = {};
        brandingInfo.Id = brandingId;
        brandingInfo.active = false;

        iziToast.show({
            theme: 'dark',
            balloon: false,
            title: 'Wait!!',
            message: 'Are You Sure Want To Delete? !',
            position: 'center', // bottomRight, bottomLeft, topRight, topLeft, topCenter, bottomCenter
            progressBarColor: 'rgb(0, 255, 184)',
            buttons: [
                ['<button>Ok</button>', function (instance, toast) {
                    instance.hide({
                        transitionOut: 'fadeOutUp',
                        onClosing: function (instance, toast, closedBy) {
                            console.info('closedBy: ' + closedBy); // The return will be: 'closedBy: buttonName'
                        }
                    }, toast, 'buttonName');
                    UpdateBrandingTeamInfo(brandingInfo, "D");


                }, true], // true to focus
                ['<button>Close</button>', function (instance, toast) {
                    instance.hide({
                        transitionOut: 'fadeOutUp',
                        onClosing: function (instance, toast, closedBy) {
                            console.info('closedBy: ' + closedBy); // The return will be: 'closedBy: buttonName'
                        }
                    }, toast, 'buttonName');
                }]
            ],
            onOpening: function (instance, toast) {
                console.info('callback abriu!');
            },
            onClosing: function (instance, toast, closedBy) {
                console.info('closedBy: ' + closedBy); // tells if it was closed by 'drag' or 'button'
            }
        });

    });

    $("#btnModalUpdate").click(function () {
        debugger;
        var brandingInfo = {};
        brandingInfo.Id = $('#txtModalId').val();
        brandingInfo.Name = $('#txtModalName').val();
        brandingInfo.EmployeeId = $('#txtModalEmployeeId').val();
        brandingInfo.MobileNumber = $('#txtModalMobileNumber').val();
        brandingInfo.Email = $('#txtModalEmail').val();
     

        UpdateBrandingTeamInfo(brandingInfo, "E");

    });

    function UpdateBrandingTeamInfo(brandingInfo, type) {
        debugger;
        $.ajax({
            url: '@Url.Action("UpadteBrandingTeamInfo", "BrandingTeam")',
            type: 'Post',
            data: JSON.stringify({ brandingInfo: brandingInfo, type: type }),
            dataType: 'json',
            async: false,
            contentType: 'application/json',
            success: function (data) {

               
                if (data.IsSuccess) {
                    iziToast.success({
                        timeout: 2000,
                        imageWidth: 150,
                        position: 'center',
                        title: 'Success',
                        message: 'Information Upadte Successfully'
                    });

                    Clear();
                    loadData();
                    return true;
                }
                else {
                    iziToast.error({
                        timeout: 2000,
                        imageWidth: 150,
                        position: 'center',
                        title: 'Error',
                        message: data.Message
                    });

                    Clear();
                    return false;
                }


            },
            error: function (result) {
                iziToast.error({
                    timeout: 2000,
                    imageWidth: 150,
                    position: 'center',
                    title: 'Error',
                    message: result
                });

                return false;
            }

        });

    }

    function EditBrandingTeam(id) {
        debugger;
        $.ajax({
            url: " @Url.Action("EditBrandingTeamListById", "BrandingTeam")",
            type: "GET",
        data: { id: id },
        contentType: "application/json;charset=UTF-8",
        dataType: "json",
        success: function(result) {

            console.log(result);
            
            $('#txtModalId').val(result.Id);
            $('#txtModalName').val(result.Name);
            $('#txtModalEmployeeId').val(result.EmployeeId);
            $('#txtModalMobileNumber').val(result.MobileNumber);
            $('#txtModalEmail').val(result.Email);

            $("#ModalBrandingTeamEdit").modal('show');
            $("#btnModalUpdate").click(function () {
                $('#ModalBrandingTeamEdit').modal('hide');
            });

        },
        error: function(errormessage) {
            alert(errormessage.responseText);
        }
    });
    return false;

    }

    function Clear() {
        $('#txtEmployeeName').val('');
        $('#txtEmployeeId').val('');
        $('#txtMobileNumber').val('');
        $('#txtEmail').val('');

        $('#txtEmployeeName').focus();

    }
</script>

